{% extends "base.html.twig" %}
{% block body %}
    <h1 style="text-align:center;">Contact</h1>

    <center>
    <span style="font-style:italic; color:red;">(C'est ton adresse qui est configur√© si tu veux tester ;-))</span>
    </center>
    <div class="container" style="width: 50%;>

        <form action="{{ path('contact_new') }}" method="POST" name="formmail">

    {{ form_start(form) }}


    {{form_label(form.nom, 'nom')}}
    {{form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.nom)}}

    {{form_label(form.email, 'email')}}
    {{form_widget(form.email, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.email)}}

    {{form_label(form.sujet, 'sujet')}}
    {{form_widget(form.sujet, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.sujet)}}

    {{form_label(form.message, 'message')}}
    {{form_widget(form.message, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.message)}}

    <div class="form-group"><input type="submit" value="Envoyer" /></div>


    {{ form_end(form) }}
    </div>

{% endblock %}
