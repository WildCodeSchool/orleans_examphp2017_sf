{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="width: 50%;">
        <h1 style="text-align:center;">Les Joueurs</h1>
    {{ form_start(form) }}
        <form action="{{ path('players_new') }}" method="POST" name="formmail">

    {{ form_start(form) }}


    {{form_label(form.nom, 'nom')}}
    {{form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.nom)}}

    {{form_label(form.experience, 'experience')}}
    {{form_widget(form.experience, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.experience)}}

    {{form_label(form.age, 'age')}}
    {{form_widget(form.age, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.age)}}

    {{form_label(form.fatigue, 'fatigue')}}
    {{form_widget(form.fatigue, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.fatigue)}}

    {{form_label(form.role, 'role')}}
    {{form_widget(form.role, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.role)}}

    {{form_label(form.image, 'image')}}
    {{form_widget(form.image, {'attr':{'class':'form-control'}}) }}
    {{form_errors(form.image)}}

    <div class="form-group"><input type="submit" value="Envoyer" /></div>


    {{ form_end(form) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('players_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
