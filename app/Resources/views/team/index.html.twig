{% extends 'QuidditchBundle:Default:index.html.twig' %}

{% block main %}
    <h1>Team list</h1>

    <table class="table table-responsive table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                <td>{{ team.name }}</td>
                <td>{{ team.country }}</td>
                <td>
                    <ul class="list-unstyled list-inline">
                        <li>
                            <a class="btn btn-default" href="{{ path('team_show', { 'id': team.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{ path('team_edit', { 'id': team.id }) }}">Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-unstyled list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('team_new') }}">Créer une équipe</a>
        </li>
    </ul>
{% endblock %}
