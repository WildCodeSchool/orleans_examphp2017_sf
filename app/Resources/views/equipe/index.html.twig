{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des équipes</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pays</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td><a href="{{ path('equipe_show', { 'id': equipe.id }) }}">{{ equipe.id }}</a></td>
                <td>{{ equipe.nom }}</td>
                <td>{{ equipe.pays }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('equipe_show', { 'id': equipe.id }) }}">montrer</a>
                        </li>
                        <li>
                            <a href="{{ path('equipe_edit', { 'id': equipe.id }) }}">éditer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipe_new') }}">Créer une nouvelle équipe</a>
        </li>
    </ul>
{% endblock %}
