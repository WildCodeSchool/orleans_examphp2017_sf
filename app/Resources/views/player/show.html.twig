{% extends 'QuidditchBundle:Default:index.html.twig' %}

{% block main %}
    <h1>Player</h1>

    <table class="table table-responsive table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>Xp</th>
                <td>{{ player.xp }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ player.age }}</td>
            </tr>
            <tr>
                <th>Tiredness</th>
                <td>{{ player.tiredness }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ player.role }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img src="{{ asset('avatar/'~player.avatar) }}" alt=""></td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('player_index') }}">Retour Ã  la liste</a>
        </li>
        <li>
            <a class="btn btn-default" href="{{ path('player_edit', { 'id': player.id }) }}">Editer le joueur</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
