
{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}


{% block body %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input class="btn btn-primary" type="submit">
    {{ form_end(form) }}


    <table class="table table-hover table-condensed">
        <thead>
        <tr>
            <th>Image</th>
            <th>Nom</th>
            <th>Experience</th>
            <th>Age</th>
            <th>Fatigue</th>
            <th>Role</th>
        </tr>
        </thead>

        <tbody>
        {% for player in players %}
            <tr>

                <td><a href="{{ path('player_show', { 'id': player.id }) }}">{{ player.id }}</a></td>
                <td>{{ player.playerName }}</td>
                <td>{{ player.playerExperience }}</td>
                <td>{{ player.playerAge }}</td>
                <td>{{ player.playerTiredness }}</td>
                <td>{{ player.playerRole }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('player_show', { 'id': player.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('player_edit', { 'id': player.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot></tfoot>
    </table>

{% endblock %}