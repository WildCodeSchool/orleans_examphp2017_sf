{% extends 'base.html.twig' %}


{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input class="btn btn-primary" type="submit">
    {{ form_end(form) }}

    <table class="table table-hover table-condensed">
        <thead>
        <tr>
            <th>age</th>
            <th>experience</th>
            <th>fatigue</th>
        </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.age }}</td>
                <td>{{ player.fatigue}}</td>
                <td>{{ player.experience }}</td>

            </tr>

        {% endfor %}
        </tbody>
        <tfoot></tfoot>
    </table>
{% endblock %}

