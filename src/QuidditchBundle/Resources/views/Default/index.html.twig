{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input class="btn btn-primary" type="submit">
    {{ form_end(form) }}

    <table class="table table-hover table-condensed">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Pays</th>
            <th>Nom du Joueur</th>
            <th>Age du Joueur</th>
            <th>Exp du Joueur</th>

        </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.nom }}</td>
                <td>{{ equipe.pays }}</td>
                <td>{% for joueur in joueurs %}{{ joueur.nom }}{% endfor %}</td>
                <td>{% for joueur in joueurs %}{{ joueur.age }}{% endfor %}</td>
                <td>{% for joueur in joueurs %}{{ joueur.exp }}{% endfor %}</td>

            </tr>
        {% else %}
            <tr><td>rien</td></tr>
        {% endfor %}
        </tbody>
        <tfoot></tfoot>
    </table>
{% endblock %}